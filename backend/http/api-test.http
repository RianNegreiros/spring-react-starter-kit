@baseURL=http://localhost:8080/api
@email=john.doe@mail.com
@firstName=John
@lastName=Doe
@password=password123

### Register a new user
POST {{baseURL}}/auth/register
Content-Type: application/json

{
  "firstName": "{{firstName}}",
  "lastName": "{{lastName}}",
  "email": "{{email}}",
  "password": "{{password}}"
}

### Verify email
POST {{baseURL}}/email/verify-email
Content-Type: application/json

{
  "email": "{{email}}",
  "code": "905093"
}

### Resend code
POST {{baseURL}}/auth/resend-verification-code
Content-Type: application/json

{
  "email": "{{email}}"
}

### Login user
# @name login
POST {{baseURL}}/auth/login
Content-Type: application/json

{
  "email": "{{email}}",
  "password": "{{password}}"
}

### Get current user data
GET {{baseURL}}/auth/current
Authorization: Bearer {{login.response.body.data.token}}
Accept: application/json

### Update user profile
PUT {{baseURL}}/user/profile
Authorization: Bearer {{login.response.body.data.token}}
Content-Type: application/json

{
  "firstName": "John Updated",
  "lastName": "Doe Updated",
  "email": "{{email}}"
}

### Upload avatar
POST {{baseURL}}/avatar
Authorization: Bearer {{login.response.body.data.token}}
Content-Type: multipart/form-data; boundary=boundary

--boundary
Content-Disposition: form-data; name="file"; filename="avatar.png"
Content-Type: image/png

< ./avatar.png
--boundary--

### Delete avatar
DELETE {{baseURL}}/avatar
Authorization: Bearer {{login.response.body.data.token}}
Accept: application/json

### Logout user
POST {{baseURL}}/auth/logout
Authorization: Bearer {{login.response.body.data.token}}
Accept: application/json


### Reset/Forgot Password request
POST {{baseURL}}/user/password/forgot
Content-Type: application/json

{
  "email": "{{email}}"
}

### Reset/Forgot Password code validation
POST {{baseURL}}/user/password/validate-code
Content-Type: application/json

{
  "code": "788272"
}

### Reset the password
POST {{baseURL}}/user/password/reset
Content-Type: application/json

{
  "code": "788272",
  "newPassword": "password1234"
}
